@model WorldBuilder.Data.PCtoItemBinding

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>PCtoItemBinding</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.PCID, "PCID", htmlAttributes: new { @class = "control-label col-md-2" })
