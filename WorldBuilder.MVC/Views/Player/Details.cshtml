                <input class="grid-item pctext field3col panelboldtext" disabled="disabled" value="CON" />
                @Html.EditorFor(model => model.CON, new { htmlAttributes = new { @class = "grid-item pctext panelboldtext field3col startdis" } })

                <!--Mod INT save-->
                <input class="grid-item pctext field3col panelboldtext" disabled="disabled" value=@((Convert.ToInt32(Model.INT) - 10) / 2) />
                @*@Html.EditorFor(model => ((Convert.ToInt32(model.INT) - 10) / 2), new { htmlAttributes = new { @class = "grid-item pctext panelboldtext field3col startdis" } })*@
                <input class="grid-item pctext field3col panelboldtext" disabled="disabled" value="INT" />
                @Html.EditorFor(model => model.INT, new { htmlAttributes = new { @class = "grid-item pctext panelboldtext field3col startdis" } })

                <!--Mod WIS save-->
