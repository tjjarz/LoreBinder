                @Html.EditorFor(model => model.WIS, new { htmlAttributes = new { @class = "grid-item pctext panelboldtext field3col startdis" } })

                <!--Mod CHA save-->
                <input class="grid-item pctext field3col panelboldtext" disabled="disabled" value=@((Convert.ToInt32(Model.CHA) - 10) / 2) />
                <input class="grid-item pctext field3col panelboldtext" disabled="disabled" value="CHA" />
                @Html.EditorFor(model => model.CHA, new { htmlAttributes = new { @class = "grid-item pctext panelboldtext field3col startdis" } })
            </div>
