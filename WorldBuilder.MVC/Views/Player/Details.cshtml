@model WorldBuilder.Data.PlayerCharacter

@{
    ViewBag.Title = Model.Name + " Sheet";
}

<div class="playerbox grid-container cardcollection">
    <section class="grid-item panel-cont">
        <img src="~/Content/assets/PersonalityPanel.svg" class="panel-svg panel-person" />
        <div class="carddata grid-container">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "grid-item pctext pcname panelboldtext" } })
            @Html.TextAreaFor(model => model.Personality, new { @class = "grid-item cardtext pctext pcsummary" })
        </div>
    </section>
