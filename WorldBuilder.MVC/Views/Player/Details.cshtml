            @Html.EditorFor(model => model.MaxHP, new { htmlAttributes = new { @class = "grid-item pctext field2col startdis" } })
            @Html.EditorFor(model => model.HitDice, new { htmlAttributes = new { @class = "grid-item pctext field2col startdis" } })
            <div class="grid-container gridpanel">
                <!--proficiency(calc) AC(calc) & Initiative(calc)-->
                <div class="grid-item pctext panellabel">Prof.</div><div class="grid-item pctext panellabel">AC</div><div class="grid-item pctext panellabel">Init.</div>
                @Html.EditorFor(model => model.DEX, new { htmlAttributes = new { @class = "grid-item pctext pchealth panelboldtext field3col startdis" } })
                @Html.EditorFor(model => model.DEX, new { htmlAttributes = new { @class = "grid-item pctext pchealth panelboldtext field3col startdis" } })
                @Html.EditorFor(model => model.DEX, new { htmlAttributes = new { @class = "grid-item pctext pchealth panelboldtext field3col startdis" } })

                <!--Mod STR save-->
                <input class="grid-item pctext field3col panelboldtext" disabled="disabled" value=@((Convert.ToInt32(Model.STR) - 10) / 2) />
                <input class="grid-item pctext field3col panelboldtext" disabled="disabled" value="STR" />
                @Html.EditorFor(model => model.STR, new { htmlAttributes = new { @class = "grid-item pctext panelboldtext field3col startdis" } })

                <!--Mod Dex save-->
                <input class="grid-item pctext field3col panelboldtext" disabled="disabled" value=@((Convert.ToInt32(Model.DEX) - 10) / 2) />

                <input class="grid-item pctext field3col panelboldtext" disabled="disabled" value="DEX" />
                @Html.EditorFor(model => model.DEX, new { htmlAttributes = new { @class = "grid-item pctext panelboldtext field3col startdis" } })

                <!--Mod CON save-->
