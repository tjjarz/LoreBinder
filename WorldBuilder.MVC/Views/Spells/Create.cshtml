@model WorldBuilder.Data.Spell

@{
    ViewBag.Title = "Create a Spell";
}

<h2>Create a Spell</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
        <hr />
        <div class="grid-container mybigspellpanel">
            <section class="grid-item">
                <img src="~/Content/assets/SpellPanelBig.svg" class="panel-svg-big-spell" />
                <div class="grid-item carddata mybigspellpanel grid-container">
                    <div class="grid-item grid-container">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "grid-item cardtext cardName panelboldtext", placeholder = "Name" } })
                        @Html.EditorFor(model => model.CastTime, new { htmlAttributes = new { @class = " grid-item cardtext cardDetail2", placeholder = "Casting Time" } })
                        @Html.EditorFor(model => model.Duration, new { htmlAttributes = new { @class = "grid-item cardtext cardDetail2", placeholder = "Duration" } })
                        @Html.TextAreaFor(model => model.RangeArea, new { @class = "grid-item cardtext cardDetail3 cardtextarea", placeholder = "Range & Area" })
                        @Html.EditorFor(model => model.SpellSchool, new { htmlAttributes = new { @class = "grid-item cardtext cardDetail2", placeholder = "School" } })
                        @Html.EditorFor(model => model.SpellEffectType, new { htmlAttributes = new { @class = "grid-item cardtext cardDetail2", placeholder = "Effect Type" } })
                        <div class="grid-item grid-container componentpanel">
                            <div class="grid-item comptoggles">
                                <input class="complabel" disabled="disabled" value="Verbal" />
                                @Html.EditorFor(model => model.Verbal, new { htmlAttributes = new { @class = "componentsbutton" } })
                            </div>
                            <div class="grid-item comptoggles">
                                <input class="complabel" disabled="disabled" value="Somatic" />
                                @Html.EditorFor(model => model.Somatic, new { htmlAttributes = new { @class = "componentsbutton" } })
                            </div>
                            <div class="grid-item comptoggles">
                                <input class="complabel" disabled="disabled" value="Material" />
                                @Html.EditorFor(model => model.Material, new { htmlAttributes = new { @class = "componentsbutton" } })
                            </div>
                            @Html.EditorFor(model => model.Components, new { htmlAttributes = new { @class = "grid-item cardtext componenttext", placeholder = "Required Components" } })
                        </div>
                    </div>
                    @Html.TextAreaFor(model => model.Summary, new { @class = "grid-item cardtext cardSummary spellsummary", placeholder = "Summary" })
                    @Html.TextAreaFor(model => model.FullText, new { @class = "grid-item cardtext cardSummary spellfulltext", placeholder = "Full Description" })
                </div>
            </section>
        </div>
    </div>
}


