@using System.Xml.Linq;
@using WorldBuilder.MVC.Models;
@model Gaggle


@{
    ViewBag.Title = "Create";
}

<script type="text/javascript">
    $(function () {
        // Remove button click
        $(document).on(
            'click',
            '[data-role="dynamic-fields"] > .form-inline [data-role="remove"]',
            function (e) {
                e.preventDefault();
                $(this).closest('.form-inline').remove();
            }
        );
        // Add button click
        $(document).on(
            'click',
            '[data-role="dynamic-fields"] > .form-inline [data-role="add"]',
            function (e) {
                e.preventDefault();
                var container = $(this).closest('[data-role="dynamic-fields"]');
                new_field_group = container.children().filter('.form-inline:first-child').clone();
                new_field_group.find('input').each(function () {
                    $(this).val('');
                });
                container.append(new_field_group);
            }
        );
    });
</script>


<h2>Create</h2>
<!--Grabbed from https://bootsnipp.com/snippets/VPRlZ-->
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div data-role="dynamic-fields">
                <div class="form-inline">
                    <div class="form-group">
                        <label class="sr-only" for="field-name" color="#ffffff">Field Name</label>
                        <input type="text" class="form-control" id="field-name" placeholder="Catagory">
                        <label class="sr-only" for="field-value">Field Value</label>
                        <textarea type="text" class="form-control" id="field-value" placeholder="Character, Item etc"></textarea>
                    </div>
                    <div class="col-md-10">
                        @{Element element;
                            Html.EditorFor(element => element, new { htmlAttributes: new { @class = "control-label col-md-2" } })
                        }
                    </div>
                        <button class="btn btn-danger" data-role="remove">
                            <span class="glyphicon glyphicon-remove"></span>
                        </button>
                        <button class="btn btn-primary" data-role="add">
                            <span class="glyphicon glyphicon-plus"></span>
                        </button>
                    </div>  <!-- /div.form-inline -->
                </div>  <!-- /div[data-role="dynamic-fields"] -->
        </div>  <!-- /div.col-md-12 -->
    </div>  <!-- /div.row -->
</div>

<div>
    <button class="btn btn-primary" data-role="save" type="submit">Save</button>
</div>



<style>
    html, body {
        padding-top: 20px;
    }

    .form-control {
        position: relative;
        max-width: 100%;
        width: 80%;
    }

    textarea {
        text-decoration: none;
    }

    .btn {
        background-color: #6f64ff;
        padding: 1px 6px;
    }

    #field-name {
        background-color: #8e8e8e;
        font-weight: 700;
        color: #ffffff;
    }

    [data-role="dynamic-fields"] > .form-inline + .form-inline {
        margin-top: 0.5em;
    }

    [data-role="dynamic-fields"] > .form-inline [data-role="add"] {
        display: none;
    }

    [data-role="dynamic-fields"] > .form-inline:last-child [data-role="add"] {
        display: inline-block;
    }

    [data-role="dynamic-fields"] > .form-inline:last-child [data-role="remove"] {
        display: none;
    }
</style>
