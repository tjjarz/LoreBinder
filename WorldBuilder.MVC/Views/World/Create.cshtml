@model List<XElement>
@{
    
    
    //Model.Add(new XElement("CurrentData","stuff"));
    if (IsPost)
    {
        int count = 0;

        while (true)
        {
            string curxlname = "xlName[" + count + "]";
            string curxlvalue = "xlValue[" + count + "]";
            //int escape = Request.Form[curxlname].Count();
            if (Request.Form[curxlname].Count() == 0) { break; }
            var newxlname = Request.Form[curxlname];
            var newxlValue = Request.Form[curxlvalue];

            Model.Add(new XElement(newxlname, newxlValue));
        }
    }
}

@{
    ViewBag.Title = "Create";
}

<script type="text/javascript">
    $(function () {
        var formCount = 0;
        // Remove button click
        $(document).on(
            'click',
            '[data-role="dynamic-fields"] > .form-inline [data-role="remove"]',
            function (e) {
                e.preventDefault();
                $(this).closest('.form-inline').remove();
            }
        );
        // Add button click
        /*$(document).on(
            'click',
            '[data-role="dynamic-fields"] > .form-inline [data-role="add"]',
            function (e) {
                e.preventDefault();
                var container = $(this).closest('[data-role="dynamic-fields"]');
                new_field_group = container.children().filter('.form-inline:first-child').clone();
                new_field_group.find('input').each(function () {
                    $(this).val('');
                });
                container.append(new_field_group);
            }
        );*/
        $(document).on(
            'click',
            '[data-role="dynamic-fields"] > .form-inline [data-role="add"]',
            function (e) {
                e.preventDefault();
                formCount++;
                if (formCount > 0) {
                    $("#btnrmv").prop("disabled", false);
                }
                var container = $(this).closest('[data-role="dynamic-fields"]');
                new_field_group = container.children().filter('.form-inline:first-child').clone();
                new_field_group.find('input').each(function () {

                    if (this.name.startsWith("xlName")) {
                        this.name = "xlName[" + formCount + "]";
                    }
                    $(this).val('');
                });
                new_field_group.find('textarea').each(function () {

                    if (this.name.startsWith("xlValue")) {
                        this.name = "xlValue[" + formCount + "]";
                    }
                    $(this).val('');
                });
                container.append(new_field_group);
                //bindKeyUpEvent();
            }
        );
        $(document).on(
            'click',
            '[data-role="draftsave"]',
            function () {
                var count = 0;

                while (false) {
                    var curxlname = "xlName[" + count + "]";
                    var curxlvalue = "xlValue[" + count + "]";
                    //int escape = Request.Form[curxlname].Count();
                    if (Request.Form[curxlname].Count() == 0) { break; }
                    var newxlname = Request.Form[curxlname];
                    var newxlValue = Request.Form[curxlvalue];

                    Model.Add(new XElement(newxlname, newxlValue));
                }
            }
        )
    });
</script>


