@using (Html.BeginForm())
{
    <div class="container">
        <div data-role="dynamic-fields">
            <div class="form-inline">
                <div class="row form-horizontal">
                    <input type="text" class="form-control" id="field-name" placeholder="Catagory" name="xlName[0]">
                    <textarea type="text" class="form-control" id="field-value" placeholder="Character, Item etc" name="xlValue[0]"></textarea>
                    <div class="col-md-12">
                    </div>  <!-- /div.col-md-12 -->
                    <button class="btn btn-danger" data-role="remove">
                        <span class="glyphicon glyphicon-remove"></span>
                    </button>
                    <button class="btn btn-primary" data-role="add">
                        <span class="glyphicon glyphicon-plus"></span>
                    </button>
                </div>
            </div>  <!-- /div.form-inline -->
        </div>  <!-- /div[data-role="dynamic-fields"] -->
        <div class="col-md-12">
        </div>  <!-- /div.col-md-12 -->
        <button class="btn btn-primary" data-role="draftsave">Save</button>
        <input type="submit" value="Submit" class="btn btn-default" />
    </div>
}


