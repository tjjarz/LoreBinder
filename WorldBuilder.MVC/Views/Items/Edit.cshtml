@model WorldBuilder.Data.Item

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        <h4>Item</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ItemID)
        <div>
            @Html.DisplayFor(model => model.Name)
            <article class="less-snazy-box">
                <div>
                    <input type="text" class="form-control field-name" value="Name" disabled>
                </div>
                <div>
                    <input type="text" class="form-control field-name" value="Type" disabled>
                </div>
                <div>
                    <input type="text" class="form-control field-name" value="Rarity" disabled>
                </div>
                <div>
                    <input type="text" class="form-control field-name-textarea" value="Summary" disabled>
                </div>
                <div>
                    <input type="text" class="form-control field-name-textarea" value="Description" disabled>
                </div>
                <div>
                    <input type="text" class="form-control field-name" value="Mechanics" disabled>
                </div>
                <div>
                    <input type="text" class="form-control field-name" value="Notes" disabled>
                </div>
                <div>
                    <input type="text" class="form-control field-name" value="References" disabled>
                </div>
            </article>
            <aside class="less-snazy-box">
                <div>
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control field-value" } })
                </div>
                <div>
                    @Html.EditorFor(model => model.Type, new { htmlAttributes = new { @class = "form-control field-value" } })
                </div>
                <div>
                    @Html.EditorFor(model => model.Rarity, new { htmlAttributes = new { @class = "form-control field-value" } })
                </div>
                <div>
                    @Html.TextAreaFor(model => model.Summary, new { htmlAttributes = new { @class = "form-control field-value-textarea" } })
                </div>
                <div>
                    @Html.TextAreaFor(model => model.FullText, new { htmlAttributes = new { @class = "form-control field-value-textarea" } })
                </div>
                <div>
                    @Html.EditorFor(model => model.Mechanics, new { htmlAttributes = new { @class = "form-control field-value" } })
                </div>
                <div>
                    @Html.EditorFor(model => model.Notes, new { htmlAttributes = new { @class = "form-control field-value" } })
                </div>
                <div>
                    @Html.EditorFor(model => model.Source, new { htmlAttributes = new { @class = "form-control field-value" } })
                </div>
            </aside>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>



}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
