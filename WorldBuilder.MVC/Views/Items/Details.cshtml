@model WorldBuilder.Data.Item

@{
    ViewBag.Title = "Item Details";
}

<h2>Item Details</h2>

<div class="grid-container">
    <section class="grid-item grid-container panel-cont">
        <img src="~/Content/assets/ItemPanelLong.svg" class="panel-svg" />
        <div class="grid-item carddata grid-container">
            <div class="grid-item grid-container">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "grid-item cardtext cardName panelboldtext" } })
                @Html.EditorFor(model => model.Type, new { htmlAttributes = new { @class = "grid-item cardtext cardDetail4" } })
                @Html.EditorFor(model => model.Rarity, new { htmlAttributes = new { @class = "grid-item cardtext cardDetail4" } })
                @Html.TextAreaFor(model => model.Mechanics, new { @class = " grid-item cardtext cardMechanics" })
            </div>

            @Html.TextAreaFor(model => model.Summary, new { @class = "grid-item cardtext ItemcardSummary" })

            @Html.TextAreaFor(model => model.FullText, new { @class = "grid-item cardtext cardSummary cardlongfulltext" })

            @Html.EditorFor(model => model.Source, new { htmlAttributes = new { @class = "grid-item cardtext carddetailbottom" } })
        </div>
    </section>
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ItemID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
